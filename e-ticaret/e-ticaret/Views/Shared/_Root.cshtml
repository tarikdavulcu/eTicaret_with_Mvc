                    <img src="img/search-icon-lg.png" alt="" />
                </div>
                <label class="h6 normal search-input-label" for="search-query">Enter keywords to Search Product</label>
                <input value="" name="q" type="search" placeholder="Search..." />
                <button type="submit">
                    <img src="img/search-lg-go-icon.png" alt="" />
                </button>
            </form>
            <!-- End Search Form -->

        </div>
    </section>
    <!-- End Search Overlay Menu ------------------------------------------------>
    <!--==========================================-->
    <!-- wrapper -->
    <!--==========================================-->
    <div class="wraper">

        <!-- Header -->
        <header class="header">
            <!--Topbar-->
            <!--End Topbart-->
            @{

                Html.RenderAction("HeaderTopBar", "Shop");
            }
        </header>
        <!-- End Header -->
        <!-- Page Content Wraper -->
        <div class="page-content-wraper">
            @RenderBody();
        </div>
        <!-- End Page Content Wraper -->
        <!-- Footer Section -------------->
        <footer class="footer section-padding">
            @{

                Html.RenderAction("Fotter", "Shop");
            }
        </footer>
        <!-- End Footer Section -------------->
    </div>

    <!-- OWL carousel js -->
    <script type="text/javascript" src="~/Content/js/plugins/slick.js"></script>
    <!-- Slick Slider js -->
    <script type="text/javascript" src="~/Content/plugins/photoswipe_popup/photoswipe.min.js"></script>
    <script type="text/javascript" src="~/Content/plugins/photoswipe_popup/photoswipe-ui-default.min.js"></script>
    <script type="text/javascript" src="~/Content/plugins/photoswipe_popup/photoswipe-core.js"></script>
    <script type="text/javascript" src="~/Content/js/plugins/plugins-all.js"></script>
    <!-- Plugins All js -->
    <script type="text/javascript" src="~/Content/js/custom.js"></script>
    <!-- custom js -->
    <!-- end jquery -->

    <script>
        function degistir() { var btnR = document.querySelector("#sidebar-right"); btnR.classList.add("sidebar-open"); var btnO = document.querySelector("#sidebar_overlay"); btnO.classList.add("sidebar_overlay_active"); } function temizle() { var btnR = document.querySelector("#sidebar_toggle_btn"); btnR.classList.remove("active"); var btnR = document.querySelector("#sidebar-right"); btnR.classList.remove("sidebar-open"); var btnO = document.querySelector("#sidebar_overlay"); btnO.classList.remove("sidebar_overlay_active"); getir(); }
        function sil(id, d) {

            var params = "{'sid':'" + id + "'}";

            $.ajax({
                type: "POST",
                url: "/Urunler/SepetenKaldir",
                dataType: "JSON",
                contentType: "application/json;charset=utf-8",
                data: params,
                success: function (sender) {
                    $("#" + d + id).remove();
                },
                error: function (eror) {
                }
            });
        }
        function ekle() {
            var params = "{'uid':'" + document.getElementById("uid").value + "','fiyat':'" + document.getElementById("fiyat").value + "','adet':'" + document.getElementById("adet").value + "','beden':'" + document.getElementById("beden").value + "','renk':'" + document.getElementById("renk").value + "'}";

            $.ajax({
                type: "POST",
                url: "/Urunler/SepeteEkle",
                dataType: "JSON",
                contentType: "application/json;charset=utf-8",
                data: params,
                success: function (sender) {
                    getir();
                },
                error: function (eror) {
                }
            });
        }

        function getir() {
            $.ajax({
                type: "POST",
                dataType: "html",
                url: "/Urunler/Sepet",
                cache: false,
                success: function getir(result) {
                    $("#sepet").empty();
                    $("#sepet").append(result);
                },
                error: function (eror) {
                }
            });
        }
    </script>


</body>
</html>
